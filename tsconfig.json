{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "paths": {
            "~/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}